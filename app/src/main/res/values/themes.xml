<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Impresario" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/googlesansregular</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.rounded" parent="">
        <item name="cornerSize">50%</item>
        <item name="colorPrimary">@color/color_green</item>
        <item name="colorPrimaryVariant">@color/color_green</item>
        <item name="fontFamily">@font/googlesansregular</item>
    </style>

    <style name="Theme.Splash" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/smoke_white</item>
        <item name="colorAccent">@color/blue_600</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="fontFamily">@font/googlesansregular</item>
    </style>


    <style name="Theme.SignIn" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="fontFamily">@font/googlesansregular</item>
    </style>

    <style name="ThemeOverlay.Impresario.AppWidgetContainer" parent="">
        <item name="fontFamily">@font/googlesansregular</item>
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/black</item>
        <item name="appWidgetTextColorLite">@color/black100</item>
    </style>

    <style name="incomeToggleBtn">
        <item name="android:backgroundTint">#B2DFDB</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="expenseToggleBtn">
        <item name="android:background">#FFCDD2</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inactiveToggleBtn">
        <item name="android:backgroundTint">#FAFAFA</item>
        <item name="android:textColor">@color/black100</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.UpdateTxn" parent="">

    </style>
    <style name="Theme.AddTxn" parent="">

    </style>

</resources>