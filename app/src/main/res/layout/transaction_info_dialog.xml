<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">

    <TextView
        android:id="@+id/txnAmount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:text="125.56"
        android:textColor="@color/black100"
        android:textSize="22sp"
        android:textStyle="bold"></TextView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:stretchColumns="0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="March 2014"
                android:textSize="14sp"></TextView>


            <TextView
                android:id="@+id/txnTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_btn_blue200"
                android:clickable="true"
                android:gravity="center|center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Expense"
                android:textAllCaps="false"
                android:textColor="@color/smoke_white"
                android:textSize="10sp"
                android:textStyle="bold"></TextView>


        </TableRow>



        <TextView
            android:id="@+id/txnDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="All Description Goes here No Tension"
            android:textSize="14sp"></TextView>


    </TableLayout>

    <ImageView
        android:id="@+id/txnHideBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ripple_button_bg_oval"

        android:src="@drawable/ic_fi_rr_angle_double_up"></ImageView>

</LinearLayout>