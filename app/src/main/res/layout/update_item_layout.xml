<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/backFromUpdateDialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ripple_button_bg_oval"
        android:padding="5dp"
        android:src="@drawable/ic_fi_rr_angle_double_down"></ImageView>


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingLeft="30dp"
           android:paddingRight="30dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="0dp"
               android:text="Transaction Details"
               android:textAllCaps="true"
               android:textAlignment="center"
               android:textColor="#2196F3"
               android:textSize="14sp"></TextView>

           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:padding="15dp"
               android:stretchColumns="*">

               <TableRow
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="3dp">

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       >
                       <ImageView
                           android:id="@+id/changeTime"
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_gravity="center_vertical|left"
                           android:clickable="true"
                           android:src="@drawable/ic_fi_rr_calendar"
                           android:focusable="true"/>

                       <TextView
                           android:id="@+id/timeTextView"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:gravity="center_vertical"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center_vertical|left"
                           android:text="March 2014"
                           android:textSize="12sp"></TextView>
                   </LinearLayout>


                   <ImageView
                       android:id="@+id/deleteTransactionBtn"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_gravity="center_vertical|right"
                       android:clickable="true"
                       android:src="@drawable/ic_trash">

                   </ImageView>


               </TableRow>


           </TableLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/amountHolderLayout"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:hint="Amount"
               app:counterEnabled="true"
               app:counterMaxLength="8">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/update_amount"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hapticFeedbackEnabled="true"
                   android:maxLength="8"
                   android:inputType="numberDecimal"></com.google.android.material.textfield.TextInputEditText>


           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/descriptionHolderLayout"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:hint="Description"
               app:counterEnabled="true"
               app:counterMaxLength="60">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/update_description"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hapticFeedbackEnabled="true"
                   android:maxLength="60"
                   ></com.google.android.material.textfield.TextInputEditText>


           </com.google.android.material.textfield.TextInputLayout>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="Select Amount type"
               android:textColor="#2196F3"
               android:textFontWeight="500"

               android:textSize="14sp"></TextView>


           <RadioGroup
               android:id="@+id/amount_type_group"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:tooltipText="Choose Amount Type">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"

                   >

                   <RadioButton
                       android:id="@+id/amount_type_expense"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:checked="false"
                       android:text="Expense"
                       android:textColor="@color/red"
                       android:textSize="14dp" />

                   <RadioButton
                       android:id="@+id/amount_type_income"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_weight="1"
                       android:checked="false"
                       android:text="Income"
                       android:textColor="#009688"
                       android:textSize="14dp" />
               </LinearLayout>

           </RadioGroup>


           <Button
               android:id="@+id/update_amountBtn"
               style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:inputType="numberDecimal"
               android:text="UPDATE"
               android:textColor="@color/blue_500"
               app:icon="@drawable/ic_fi_rr_check"></Button>

       </LinearLayout>
   </ScrollView>


</LinearLayout>