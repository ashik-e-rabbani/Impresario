<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rippler_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:stretchColumns="1,2">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/avatarHolder"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_income_bg"
                    android:gravity="center"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/currency_sign"
                    android:textColor="@color/color_green"
                    android:textStyle="bold"
                    android:transitionName="avatarHolder"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.rounded"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/amountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginBottom="2dp"
                        android:alpha="0.9"
                        android:text="TextView"
                        android:textColor="@color/blackyBlue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:transitionName="amountText" />

                    <TextView
                        android:id="@+id/txn_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginBottom="2dp"
                        android:alpha="0.7"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="normal"
                        android:transitionName="txn_description" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="17 March"
                        android:textSize="10sp"
                        android:transitionName="timeText"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/btn_edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:alpha="0.5"
                        android:background="@drawable/ic_fi_rr_angle_small_right"
                        android:backgroundTint="@color/black100">

                    </ImageView>

                </LinearLayout>


            </TableRow>


        </TableLayout>

        <View
            android:layout_width="match_parent"

            android:layout_height="0.5dp"
            android:layout_marginLeft="73dp"
            android:background="#2C000000"></View>
    </LinearLayout>


</LinearLayout>