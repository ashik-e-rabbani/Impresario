<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg_rect"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Impresario.AppWidgetContainer">


    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:text="11:50"-->
    <!--        android:textSize="56sp"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:textColor="@color/black100"></TextView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/appwidget_text"


            android:gravity="center"
            android:text="@string/appwidget_text"
            android:textColor="@color/blue_500"

            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/appwidget_text"

            android:gravity="center"
            android:text="@string/appwidget_text"
            android:textColor="@color/blue_500"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"


            android:gravity="left"
            android:text="@string/app_name"
            android:textColor="?attr/appWidgetTextColorLite"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:text="|"
            android:textColor="?attr/appWidgetTextColorLite"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/currentTime"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Last Update: 09:20 PM"

            android:gravity="right"
            android:text="Last Update: 09:20 PM"
            android:textColor="?attr/appWidgetTextColorLite"
            android:textSize="10sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>