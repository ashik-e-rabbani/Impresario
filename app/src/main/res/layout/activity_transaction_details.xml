<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TransactionDetailsActivity">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:stretchColumns="*">

                <TableRow

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/goBackBtn"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_fi_rr_angle_left"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="Transaction Details"
                            android:textColor="@color/blue_600"
                            android:textSize="18sp"
                            android:textStyle="bold"></TextView>


                    </LinearLayout>

                </TableRow>


            </TableLayout>
        </androidx.appcompat.widget.Toolbar>


<LinearLayout
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:clickable="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/avatarHolder"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_income_bg"
        android:gravity="center"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:layout_marginBottom="10dp"
        android:text="à§³"
        android:textColor="@color/color_green"
        android:textStyle="bold"
        android:transitionName="avatarHolder"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.rounded"></TextView>


    <TextView
        android:id="@+id/amountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="@color/blackyBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        android:transitionName="amountText" />
    <TextView
        android:id="@+id/timeText"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:text="17 March"
        android:textSize="12sp"
        android:transitionName="timeText"></TextView>

    <TextView
        android:id="@+id/txn_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="Description"
        android:textColor="#E12A2A2B"
        android:textSize="14sp"
        android:textStyle="normal"
        android:transitionName="txn_description" />


</LinearLayout>


</LinearLayout>