<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afss.impresario">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Impresario">
        <activity android:name=".TransactionDetailsActivity"></activity>
        <activity android:name=".AddTransactionActivity" />
        <activity android:name=".ProfileActivity" />

        <receiver android:name=".BalanceWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/balance_widget_info" />
        </receiver>

        <activity
            android:name=".AllTransactions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GoogleSingInPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SignIn" />
        <activity
            android:name=".HomepageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity> <!-- registering the receiver -->
        <receiver
            android:name=".Services.AlarmService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>